@using Resources;

<div id="add_comment_form" class="w3-modal">
    <div class="w3-modal-content w3-card-4 w3-animate-zoom" style="max-width:600px">

        <div class="w3-center">
            <br>
            <span class="w3-button w3-xlarge w3-transparent w3-display-topright close-modal" title="Close Modal">×</span>           
        </div>

        <form class="w3-container" id="add_comment_form_data">
            <div class="w3-section">
                <label><b>@Resource.Title_subject</b></label>
                <input class="w3-input w3-border w3-margin-bottom" type="text" id="add_comment_subject_title" disabled>
                <label><b>@Resource.Comment_description</b></label>
                <textarea class="w3-input w3-border w3-margin-bottom" style="resize:vertical;height:120px" type="text" placeholder="@Resource.Ph_comment_description" id="add_comment_description" required></textarea>
                <input class="w3-radio" type="radio" name="visibility" value="false" checked>
                <label>@Resource.Private</label>
                <input class="w3-radio" type="radio" name="visibility" value="true" id="radio_public">
                <label>@Resource.Public</label>
                <button class="w3-button w3-block w3-theme w3-section w3-padding " type="submit" id="add_comment">@Resource.Btn_add_comment</button>
            </div>
        </form>

        <div class="w3-container w3-border-top w3-padding-16 w3-light-grey">
            <button type="button" class="w3-button w3-red close-modal">@Resource.Btn_cancel</button>
        </div>

    </div>
</div>
