@using Resources;

<div id="add_user_form" class="w3-modal">
    <div class="w3-modal-content w3-card-4 w3-animate-zoom" style="max-width:400px">

        <div class="w3-center">
            <br>
            <span class="w3-button w3-xlarge w3-transparent w3-display-topright close-modal" title="Close Modal">×</span>
            <img src="~/Images/user.png" alt="Avatar" style="width:30%" class="w3-circle w3-margin-top">
        </div>

        <form class="w3-container" id="add_user_form_data">
            <div class="w3-section">
                <label><b>@Resource.Email</b></label>
                <input class="w3-input w3-border w3-margin-bottom" type="text" placeholder="@Resource.Ph_email" id="email_add_user_form" required>
                <label><b>@Resource.Password</b></label>
                <input class="w3-input w3-border w3-margin-bottom" type="password" placeholder="@Resource.Ph_password" id="psw_add_user_form" required>
                <label><b>@Resource.Password_confirm</b></label>
                <input class="w3-input w3-border w3-margin-bottom" type="password" placeholder="@Resource.Ph_password_confirm" id="psw_confirm_add_user_form" required>
                <label><b>@Resource.FirstName</b></label>
                <input class="w3-input w3-border w3-margin-bottom" type="text" placeholder="@Resource.Ph_firstname" id="firstname_add_user_form" required>
                <label><b>@Resource.LastName</b></label>
                <input class="w3-input w3-border w3-margin-bottom" type="text" placeholder="@Resource.LastName" id="lastname_add_user_form" required>
                <label><b>@Resource.Patronymic</b></label>
                <input class="w3-input w3-border w3-margin-bottom" type="text" placeholder="@Resource.Ph_patronymic" id="patronymic_add_user_form">
                <label><b>@Resource.Status</b></label>
                <select id="role_add_user_form" class="w3-input w3-border w3-margin-bottom">
                    <option>Студент</option>
                    <option>Преподаватель</option>
                </select>
                <div id="block_study_start_add_user_form">
                    <label><b>@Resource.Study_begining</b></label>
                    <input class="w3-input w3-border w3-margin-bottom" type="text" id="studystart_add_user_form" placeholder="@Resource.Ph_studystart" required>
                </div>
                <button class="w3-button w3-block w3-theme w3-section w3-padding" type="submit" id="register_add_user_form">@Resource.Btn_register</button>
            </div>
        </form>

        <div class="w3-container w3-border-top w3-padding-16 w3-light-grey">
            <button type="button" class="w3-button w3-red close-modal">@Resource.Btn_cancel</button>            
        </div>

    </div>
</div>
