@using Resources;

<div id="add_subject_form" class="w3-modal">
    <div class="w3-modal-content w3-card-4 w3-animate-zoom" style="max-width:400px">

        <div class="w3-center">
            <br>
            <span class="w3-button w3-xlarge w3-transparent w3-display-topright close-modal" title="Close Modal">×</span>         
            <img src="~/Images/Book.png" alt="Avatar" style="width:30%" class="w3-circle w3-margin-top">  
        </div>

        <form class="w3-container" id="add_subject_form_data">
            <div class="w3-section">
                <label><b>@Resource.Title_subject</b></label>
                <input class="w3-input w3-border w3-margin-bottom" type="text" placeholder="@Resource.Ph_subj_title" id="add_subject_title" required>
                <label><b>@Resource.Subj_description</b></label>
                <input class="w3-input w3-border w3-margin-bottom" type="text" placeholder="@Resource.Ph_subj_description" id="add_subject_description">                                
                <button class="w3-button w3-block w3-theme w3-section w3-padding" type="submit" id="add_subject">@Resource.Btn_add</button>
            </div>
        </form>

        <div class="w3-container w3-border-top w3-padding-16 w3-light-grey">
            <button type="button" class="w3-button w3-red close-modal">@Resource.Btn_cancel</button>
        </div>

    </div>
</div>
